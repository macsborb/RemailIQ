<!DOCTYPE html>
<html lang="fr" data-theme="ProspectAI">
<head>
  <meta charset="utf-8">
  <title>ProspectAI - Mon Profil</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/daisyui@5" rel="stylesheet" type="text/css" />
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <!-- Motion pour les animations -->
  
  
  <link rel="stylesheet" href="/css/output.css">
</head>
<body class="bg-base-100 text-base-content">
  <div class="drawer">
    <input id="my-drawer" type="checkbox" class="drawer-toggle hidden">
    <div class="drawer-content">
      <div class="navbar border-b-secondary bg-base-100 shadow-sm fixed shadow-sm fixed top-0 left-0 right-0 z-50">
        <div class="navbar-start">
          <label for="my-drawer" class="btn btn-circle swap swap-rotate">
            <input type="checkbox" />
            <!-- hamburger icon -->
            <svg
              class="swap-off fill-current"
              xmlns="http://www.w3.org/2000/svg"
              width="32"
              height="32"
              viewBox="0 0 512 512">
              <path d="M64,384H448V341.33H64Zm0-106.67H448V234.67H64ZM64,128v42.67H448V128Z" />
            </svg>
            <!-- close icon -->
            <svg
              class="swap-on fill-current"
              xmlns="http://www.w3.org/2000/svg"
              width="32"
              height="32"
              viewBox="0 0 512 512">
              <polygon
                points="400 145.49 366.51 112 256 222.51 145.49 112 112 145.49 222.51 256 112 366.51 145.49 400 256 289.49 366.51 400 400 366.51 289.49 256 400 145.49" />
            </svg>
          </label>
          <a class="btn btn-ghost text-xl" href="/dashboard">ProspectAI</a>
        </div>
        <div class="navbar-center hidden lg:flex">
          <ul class="menu menu-horizontal px-1">
            <li><a class="btn btn-ghost normal-case text-l" href="/dashboard">Dashboard</a></li>
            <li><a class="btn btn-ghost normal-case text-l" href="/generate">Générer un mail</a></li>
            <li>
              <label class="swap swap-rotate">
                <input type="checkbox" class="theme-controller" value="dark" />
                <!-- sun icon -->
                <svg
                  class="swap-off h-7 w-7 fill-current text-yellow-500"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24">
                  <path
                    d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z" />
                </svg>
                <!-- moon icon -->
                <svg
                  class="swap-on h-7 w-7 fill-current"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24">
                  <path
                    d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z" />
                </svg>
              </label>
            </li>
          </ul>
        </div>
        <div class="navbar-end flex gap-6 items-center">
          <% if (outlookConnected) { %>
            <span class="text-sm">Connecté à : <%= outlookEmail %></span>
          <% } %>
          <!-- Avatar Dropdown -->
          <div class="dropdown dropdown-end">
            <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
              <div class="w-10 rounded-full bg-neutral text-neutral-content flex items-center justify-center overflow-hidden">
                <% if (typeof outlookEmail !== 'undefined' && outlookEmail) { %>
                <span class="text-lg font-bold"><%= outlookEmail.charAt(0).toUpperCase() %></span>
                <% } else { %>
                <span class="text-lg font-bold">?</span>
                <% } %>
              </div>
            </div>
            <ul tabindex="0" class="menu menu-sm dropdown-content bg-base-100 rounded-box z-1 mt-3 w-52 p-2 shadow">
              <li>
                <a class="justify-between" href="/profile">
                  Profil
                </a>
              </li>
              <li><a href="/settings">Paramètres</a></li>
              <li>
                <form method="post" action="/logout">
                  <button type="submit" class="w-full text-left">Se déconnecter</button>
                </form>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Page Content -->
      <main class="flex-1 pt-20 pr-100 pl-80 bg-base-100 mt-16">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-2xl font-bold">Mon Profil</h2>
        </div>

        <% if (success) { %>
          <div class="alert alert-success mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span><%= success %></span>
          </div>
        <% } %>

        <% if (error) { %>
          <div class="alert alert-error mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span><%= error %></span>
          </div>
        <% } %>

        <form action="/profile/update" method="POST" id="profile-form">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
            <!-- Carte pour les informations personnelles -->
            <div class="card bg-base-100 shadow-xl">
              <div class="card-body">
                <div class="flex justify-between items-center mb-4">
                  <h2 class="card-title">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                    Informations Personnelles
                  </h2>
                  <button type="button" class="btn btn-sm btn-outline edit-toggle" data-target="personal-info">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                    </svg>
                    Modifier
                  </button>
                </div>
                
                <div id="personal-info">
                  <div class="flex flex-wrap gap-4">
                    <div class="form-control mb-4 flex-1 min-w-[200px]">
                      <label class="label">
                        <span class="label-text font-medium">Prénom</span>
                      </label>
                      <input type="text" name="first_name" placeholder="Prénom" class="input input-bordered w-full" value="<%= profile.first_name || '' %>" disabled />
                    </div>
                    
                    <div class="form-control mb-4 flex-1 min-w-[200px]">
                      <label class="label">
                        <span class="label-text font-medium">Nom</span>
                      </label>
                      <input type="text" name="last_name" placeholder="Nom" class="input input-bordered w-full" value="<%= profile.last_name || '' %>" disabled />
                    </div>
                  </div>
                  
                  <div class="form-control mb-4">
                    <label class="label">
                      <span class="label-text font-medium">Âge</span>
                    </label>
                    <input type="number" name="age" placeholder="30" class="input input-bordered w-full max-w-xs" value="<%= profile.age || '' %>" min="18" max="120" disabled />
                  </div>
                </div>
              </div>
            </div>
          
            <!-- Carte pour les informations professionnelles -->
            <div class="card bg-base-100 shadow-xl">
              <div class="card-body">
                <div class="flex justify-between items-center mb-4">
                  <h2 class="card-title">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    Informations Professionnelles
                  </h2>
                  <button type="button" class="btn btn-sm btn-outline edit-toggle" data-target="professional-info">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                    </svg>
                    Modifier
                  </button>
                </div>
              
                <div id="professional-info">
                  <div class="form-control mb-4">
                    <label class="label">
                      <span class="label-text font-medium">Profession</span>
                    </label>
                    <input type="text" name="profession" placeholder="Ex: Ingénieur, Commercial, Designer..." class="input input-bordered w-full" value="<%= profile.profession || '' %>" disabled />
                  </div>
                  
                  <div class="flex flex-wrap gap-4">
                    <div class="form-control mb-4 flex-1 min-w-[200px]">
                      <label class="label">
                        <span class="label-text font-medium">Entreprise</span>
                      </label>
                      <input type="text" name="company" placeholder="Nom de votre entreprise" class="input input-bordered w-full" value="<%= profile.company || '' %>" disabled />
                    </div>
                    
                    <div class="form-control mb-4 flex-1 min-w-[200px]">
                      <label class="label">
                        <span class="label-text font-medium">Poste</span>
                      </label>
                      <input type="text" name="position" placeholder="Votre titre ou position" class="input input-bordered w-full" value="<%= profile.position || '' %>" disabled />
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div id="save-changes" class="flex justify-end mb-10 hidden">
            <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
          </div>
        </form>
      </main>

      <script>
        document.addEventListener('DOMContentLoaded', function() {
          // Gérer le clic sur les boutons "Modifier"
          const editButtons = document.querySelectorAll('.edit-toggle');
          const saveButton = document.getElementById('save-changes');
          const form = document.getElementById('profile-form');
          
          // Ajouter un gestionnaire d'événement pour la soumission du formulaire
          form.addEventListener('submit', function(e) {
            // Activer temporairement tous les champs pour qu'ils soient envoyés
            const allInputs = this.querySelectorAll('input, textarea, select');
            allInputs.forEach(input => input.disabled = false);
          });
          
          editButtons.forEach(button => {
            button.addEventListener('click', function() {
              const targetId = this.getAttribute('data-target');
              const targetContainer = document.getElementById(targetId);
              const inputs = targetContainer.querySelectorAll('input, textarea, select');
              
              // Basculer entre le mode lecture et modification
              if (inputs[0].disabled) {
                // Passer en mode édition
                inputs.forEach(input => input.disabled = false);
                this.innerHTML = `
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                  </svg>
                  Annuler
                `;
                saveButton.classList.remove('hidden');
              } else {
                // Revenir en mode lecture
                inputs.forEach(input => input.disabled = true);
                this.innerHTML = `
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                  </svg>
                  Modifier
                `;
                
                // Vérifier si tous les champs sont désactivés
                const allInputs = document.querySelectorAll('form input, form textarea, form select');
                const allDisabled = Array.from(allInputs).every(input => input.disabled);
                
                if (allDisabled) {
                  saveButton.classList.add('hidden');
                }
              }
            });
          });
        });
      </script>
    </div>
    
    <div class="drawer-side">
      <label for="my-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
      <ul class="menu bg-base-200 text-base-content min-h-full w-80 p-4">
        <li>
          <a class="btn btn-ghost normal-case text-xl">Menu</a>
        </li>
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/generate">Générer un mail</a></li>
        <li><a href="/profile" class="active">Mon profil</a></li>
        <li><a href="/settings">Paramètres</a></li>
        <li>
          <form method="post" action="/logout">
            <button type="submit" class="w-full text-left">Se déconnecter</button>
          </form>
        </li>
      </ul>
    </div>
  </div>
</body>
</html> 