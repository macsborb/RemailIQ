<!DOCTYPE html>
<html data-theme="ProspectAI" lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ProspectAI - Accueil</title>
  <link rel="stylesheet" href="https://unicons.iconscout.com/release/v2.1.9/css/unicons.css">
  <link href="https://cdn.jsdelivr.net/npm/daisyui@5" rel="stylesheet" type="text/css" />
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <link rel="stylesheet" href="/css/output.css">
  <script src="/js/index.js" defer></script>
  <style>
    body {
      min-height: 100vh;
      overflow-x: hidden;
    }
    .mouse-spotlight {
      pointer-events: none;
      position: fixed;
      z-index: 0;
      width: 100px;
      height: 100px;
      border-radius: 50%;
      background: radial-gradient(circle, rgba(99,102,241,0.15) 0%, rgba(99,102,241,0.05) 80%, transparent 100%);
      transform: translate(-50%, -50%);
      transition: left 0.2s cubic-bezier(.4,2,.6,1), top 0.2s cubic-bezier(.4,2,.6,1);
    }
  </style>
</head>
<body class="bg-base-100 text-base-content relative">
  <div id="spotlight" class="mouse-spotlight"></div>
  <!-- Navbar -->
  <nav class="navbar bg-base-100 shadow-lg fixed top-0 left-0 right-0 z-50 px-4">
    <div class="navbar-start">
      <a class="btn btn-ghost text-2xl font-extrabold tracking-tight">ProspectAI</a>
    </div>
    <div class="navbar-center hidden lg:flex">
      <ul class="menu menu-horizontal px-1 gap-2">
        <li><a href="#features" class="hover:scale-105 transition-transform">Fonctionnalités</a></li>
        <li><a href="#testimonials" class="hover:scale-105 transition-transform">Témoignages</a></li>
        <li><a href="#contact" class="hover:scale-105 transition-transform">Contact</a></li>
      </ul>
    </div>
    <div class="navbar-end">
      <a href="#auth" class="btn btn-primary btn-md shadow-md hover:scale-105 transition-transform">Se connecter</a>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="pt-32 pb-16 flex flex-col items-center justify-center text-center relative overflow-hidden">
    <div class="absolute inset-0 pointer-events-none z-0">
      <div class="w-full h-full bg-gradient-to-br from-indigo-100/60 via-white/0 to-blue-100/40 animate-pulse"></div>
    </div>
    <div class="relative z-10 max-w-3xl mx-auto">
      <h1 class="text-5xl md:text-6xl font-extrabold mb-6 bg-clip-text text-transparent bg-gradient-to-r from-indigo-600 via-blue-500 to-cyan-400 animate-gradient-x">Révolutionne ta prospection B2B avec l'IA</h1>
      <p class="text-lg md:text-xl mb-8 text-gray-600">ProspectAI automatise la création de mails de prospection personnalisés, booste ton efficacité commerciale et t'aide à engager tes prospects comme jamais.</p>
      <a href="#auth" class="btn btn-primary btn-lg shadow-lg hover:scale-105 transition-transform">Commencer gratuitement</a>
      <div class="mt-10 flex justify-center">
        <img src="/img/ai-email.png" alt="Illustration AI" class="rounded-2xl border-4 border-primary shadow-2xl w-72 md:w-96 hover:scale-105 transition-transform duration-300 bg-white/80 backdrop-blur-lg" />
      </div>
    </div>
  </section>

  <!-- Carrousel visuel DaisyUI natif -->
  <section class="py-16 bg-base-100">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center mb-10">Aperçu visuel</h2>
      <div class="carousel w-full max-w-3xl mx-auto rounded-box shadow-xl">
        <div id="slide1" class="carousel-item relative w-full">
          <img
            src="https://img.daisyui.com/images/stock/photo-1625726411847-8cbb60cc71e6.webp"
            class="w-full rounded-xl" />
          <div class="absolute left-5 right-5 top-1/2 flex -translate-y-1/2 transform justify-between">
            <a href="#slide4" class="btn btn-circle">❮</a>
            <a href="#slide2" class="btn btn-circle">❯</a>
          </div>
        </div>
        <div id="slide2" class="carousel-item relative w-full">
          <img
            src="https://img.daisyui.com/images/stock/photo-1609621838510-5ad474b7d25d.webp"
            class="w-full rounded-xl" />
          <div class="absolute left-5 right-5 top-1/2 flex -translate-y-1/2 transform justify-between">
            <a href="#slide1" class="btn btn-circle">❮</a>
            <a href="#slide3" class="btn btn-circle">❯</a>
          </div>
        </div>
        <div id="slide3" class="carousel-item relative w-full">
          <img
            src="https://img.daisyui.com/images/stock/photo-1414694762283-acccc27bca85.webp"
            class="w-full rounded-xl" />
          <div class="absolute left-5 right-5 top-1/2 flex -translate-y-1/2 transform justify-between">
            <a href="#slide2" class="btn btn-circle">❮</a>
            <a href="#slide4" class="btn btn-circle">❯</a>
          </div>
        </div>
        <div id="slide4" class="carousel-item relative w-full">
          <img
            src="https://img.daisyui.com/images/stock/photo-1665553365602-b2fb8e5d1707.webp"
            class="w-full rounded-xl" />
          <div class="absolute left-5 right-5 top-1/2 flex -translate-y-1/2 transform justify-between">
            <a href="#slide3" class="btn btn-circle">❮</a>
            <a href="#slide1" class="btn btn-circle">❯</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Section témoignages -->
  <section id="testimonials" class="py-16 bg-base-300">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center mb-10">Ils utilisent ProspectAI</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="card bg-base-100 shadow-xl hover:scale-105 transition-transform duration-300">
          <div class="card-body items-center text-center">
            <img src="https://randomuser.me/api/portraits/men/32.jpg" class="w-16 h-16 rounded-full mb-2" alt="User1" />
            <h4 class="font-bold">Julien, SDR</h4>
            <p>« J’ai multiplié par 3 mes prises de rendez-vous. L’IA adapte vraiment le ton à chaque prospect. »</p>
          </div>
        </div>
        <div class="card bg-base-100 shadow-xl hover:scale-105 transition-transform duration-300">
          <div class="card-body items-center text-center">
            <img src="https://randomuser.me/api/portraits/women/44.jpg" class="w-16 h-16 rounded-full mb-2" alt="User2" />
            <h4 class="font-bold">Sophie, Responsable Com</h4>
            <p>« L’interface est ultra fluide, et la génération de mails personnalisés me fait gagner un temps fou. »</p>
          </div>
        </div>
        <div class="card bg-base-100 shadow-xl hover:scale-105 transition-transform duration-300">
          <div class="card-body items-center text-center">
            <img src="https://randomuser.me/api/portraits/men/65.jpg" class="w-16 h-16 rounded-full mb-2" alt="User3" />
            <h4 class="font-bold">Marc, CEO</h4>
            <p>« ProspectAI a transformé notre prospection. L’IA apprend de nos échanges et améliore nos taux de réponse. »</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Section Auth (préserve les ids) -->
  <div id="auth" class="w-full flex justify-center py-16">
    <div class="max-w-md w-full bg-base-200 p-8 rounded-box shadow-lg flex flex-col items-center gap-6">
      <h2 class="text-2xl font-bold mb-6">Rejoindre ProspectAI</h2>
      <a href="/login" class="btn btn-primary btn-lg w-full max-w-xs shadow-md hover:scale-105 transition-transform">Se connecter</a>
      <a href="/register" class="btn btn-outline btn-lg w-full max-w-xs shadow-md hover:scale-105 transition-transform">Créer un compte</a>
    </div>
  </div>

  <!-- Footer modern -->
  <footer class="footer bg-base-200 text-base-content p-10 mt-16 border-t border-base-300">
    <nav>
      <h6 class="footer-title">Produit</h6>
      <a class="link link-hover">Fonctionnalités</a>
      <a class="link link-hover">Tarifs</a>
      <a class="link link-hover">Sécurité</a>
      <a class="link link-hover">API</a>
    </nav>
    <nav>
      <h6 class="footer-title">Entreprise</h6>
      <a class="link link-hover">À propos</a>
      <a class="link link-hover">Contact</a>
      <a class="link link-hover">Jobs</a>
      <a class="link link-hover">Presse</a>
    </nav>
    <nav>
      <h6 class="footer-title">Réseaux</h6>
      <div class="grid grid-flow-col gap-4">
        <a><i class="uil uil-twitter text-2xl"></i></a>
        <a><i class="uil uil-linkedin text-2xl"></i></a>
        <a><i class="uil uil-github text-2xl"></i></a>
      </div>
    </nav>
  </footer>
  <footer class="footer footer-center bg-base-300 text-base-content p-4">
    <aside>
      <p>Copyright © 2025 - ProspectAI</p>
    </aside>
  </footer>

  <script>
    // Animation du spotlight souris
    const spotlight = document.getElementById('spotlight');
    document.addEventListener('mousemove', (e) => {
      spotlight.style.left = e.clientX + 'px';
      spotlight.style.top = e.clientY + 'px';
    });
  </script>
</body>
</html>

